@model MVCProyecto.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Contraseña Olvidada";
}
<link rel="stylesheet" href="~/Estilos/Forget.css" />
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />


@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary("", new { @class = "text-danger" })

<div class="caja">
    <h2 class="Titulo2">@ViewBag.Title</h2>
    <p style="text-align:center;">Introduzca la dirección registrada de correo por favor. <br />Le enviaremos un enlace para actualizar su contraseña.</p>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input class="Refistrar" type="submit" value="Enviar" />
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
