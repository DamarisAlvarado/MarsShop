            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <font color="green">@ViewBag.mensaje</font>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input class="guardar" type="submit" value="Guardar" />
                </div>
            </div>
        </div>

        <div class="columna2">
            <img class="ImagenF" src="https://img.freepik.com/foto-gratis/concepto-venta-compras-moda-estilo-personas-hombre-joven-elegante-eligiendo-calzado-centro-comercial_1157-48894.jpg?w=360&t=st=1669406774~exp=1669407374~hmac=ba0d34ca3d80e33dc5a2cdf13b0f8b812f5ce0af510f21f2e5dd470134a352de" />
        </div>
      
