@model MVCProyecto.Models.calzado
<link  rel="stylesheet" href="~/Estilos/Tabladearticulos.css"/>
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
@{
    ViewBag.Title = "Guardar";
}
<style>
    body {
        background-image: url(https://img.freepik.com/vector-gratis/papel-pintado-blanco-elegante-detalles-dorados_23-2149095007.jpg?w=1060&t=st=1669611865~exp=1669612465~hmac=1a8e6dec60d1b6c018dcb0de27eac8e407f259bea79deb73fc5e64699380bf1b);
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<h2 class="Titulo2">@ViewBag.Title</h2>


@using (Html.BeginForm("Nuevo", "Calzado", new { ReturnUrl = ViewBag.ReturnUrl },
FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Calzado</h4>

    <div class="completo">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="columna1">
